{
  "headers": [
    {
      "source": "/(.*\\.(?:ico|gif|jpeg|jpg|png|svg|webp|avif|css|js|woff|woff2|ttf|eot|otf))$",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=()"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/css/(.*)",
      "destination": "/$1",
      "statusCode": 200
    },
    {
      "source": "/js/(.*)",
      "destination": "/$1",
      "statusCode": 200
    },
    {
      "source": "/catalog/catalog/(.*)",
      "destination": "/catalog/$1",
      "permanent": true
    },
    {
      "source": "/guides/guides/(.*)",
      "destination": "/guides/$1",
      "permanent": true
    }
  ]
}