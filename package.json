{
  "name": "one-click-hugo-cms",
  "version": "1.0.0",
  "description": "Hugo template with Decap CMS ",
  "repository": "decaporg/one-click-hugo-cms",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src cypress",
    "start": "run-p start:hugo start:webpack start:cms",
    "start:cms": "npx decap-server",
    "start:hugo": "hugo server -s site -D --bind 0.0.0.0 --baseURL http://localhost:3000 --disableFastRender --navigateToChanged --templateMetrics",
    "start:webpack": "webpack-dev-server --config webpack.dev.js --hot",
    "preview": "run-p preview:**",
    "preview:hugo": "npm run start:hugo -- -D -F",
    "preview:webpack": "npm run start:webpack",
    "prebuild": "rimraf dist",
    "build": "npm run build:webpack && npm run build:hugo",
    "build:preview": "npm run build:webpack && npm run build:hugo:preview",
    "build:hugo": "hugo --gc --minify -s site -d ../dist",
    "build:hugo:preview": "hugo --gc --minify -s site -d ../dist -D -F",
    "build:webpack": "cross-env NODE_ENV=production webpack --config webpack.prod.js",
    "cypress:open": "cypress open --e2e",
    "cypress:run": "cypress run --e2e",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:html": "prettier --write '**/*.html'",
    "format:js": "prettier --write '**/*.js'",
    "format:css": "prettier --write '**/*.{css,scss}'",
    "format:yaml": "prettier --write '**/*.yaml'"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.16.0",
    "@babel/eslint-parser": "^7.16.3",
    "@babel/plugin-proposal-object-rest-spread": "^7.20.7",
    "@babel/preset-env": "^7.16.0",
    "@babel/register": "^7.16.0",
    "@fullhuman/postcss-purgecss": "^4.1.3",
    "@tailwindcss/postcss": "^4.1.13",
    "ajv": "^8.17.1",
    "assets-webpack-plugin": "^7.1.1",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^8.2.3",
    "clean-webpack-plugin": "^4.0.0",
    "compression-webpack-plugin": "^10.0.0",
    "copy-webpack-plugin": "^9.1.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.11.0",
    "css-minimizer-webpack-plugin": "^4.0.0",
    "cssnano": "^7.1.1",
    "eslint": "^8.2.0",
    "eslint-import-resolver-webpack": "^0.13.10",
    "eslint-plugin-cypress": "^2.13.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.32.2",
    "exports-loader": "^3.1.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "image-minimizer-webpack-plugin": "^4.0.0",
    "imagemin": "^8.0.1",
    "imagemin-gifsicle": "^7.0.0",
    "imagemin-jpegtran": "^7.0.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^4.0.0",
    "imports-loader": "^3.1.1",
    "mini-css-extract-plugin": "^2.4.4",
    "npm-run-all": "^4.1.5",
    "postcss-custom-media": "^11.0.6",
    "postcss-import": "^16.1.1",
    "postcss-loader": "^6.2.1",
    "postcss-preset-env": "^10.3.1",
    "prettier": "^3.6.2",
    "sass": "^1.53.0",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.4",
    "tailwindcss": "^4.1.13",
    "terser-webpack-plugin": "^5.2.5",
    "webpack": "^5.64.1",
    "webpack-cli": "^4.9.1",
    "webpack-dev-server": "^4.5.0",
    "webpack-manifest-plugin": "^5.0.1",
    "webpack-merge": "^5.8.0"
  },
  "dependencies": {
